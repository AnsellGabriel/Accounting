<%= content_tag :h1, "List of Check Vouchers" %>


<div class="text-end mb-3">
  <%= link_to new_check_voucher_path, class: 'btn btn-primary' do %>
    New Check Voucher
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        
        <th>Voucher</th>
        <th>Date Voucher</th>
        <th>Payee</th>
        <th>Bank</th>
        <th>Description</th>
        <th>Amount</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @check_vouchers.each do |check_voucher| %>
        <tr>

        <td><%= check_voucher.id %></td>
        <td><%= check_voucher.voucher %></td>
        <td><%= check_voucher.date_voucher %></td>
        <td><%= check_voucher.payee %></td>
        <td><%= check_voucher.bank %></td>
        <td><%= check_voucher.description %></td>
        <td><%= check_voucher.amount %></td>
    
          <td>
            <%= link_to 'View', check_voucher, class: 'btn' %>
            <%= link_to 'Edit', edit_check_voucher_path(check_voucher), class: 'btn' %>
            <%= link_to 'Delete', check_voucher, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
