   
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Account</th>
      <th>Sub-account</th>
      <th>Entry Type</th>
      <th>Debit</th>
      <th>Credit</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @check_voucher.ledgers.each do |ledger| %>
      <tr id=<%= dom_id(ledger) %>>
        <td><%= ledger.id %></td>
        <td><%= ledger.account %></td>
        <td><%= ledger.sub_account %></td>
        <td><%= ledger.entry_type %></td>
        <td><%= ledger.debit %></td>
        <td><%= ledger.credit %></td>
        <td>
          <%= link_to 'Edit', edit_ledger_path(ledger), data: { turbo_frame: "remote_modal" }, class: 'btn'  %>
          <%= link_to 'Delete', ledger, data: { turbo_confirm: 'Are you sure?', turbo_method: :delete }, class: 'btn' %>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
