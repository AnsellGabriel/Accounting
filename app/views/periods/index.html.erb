<%= content_tag :h1, "List of Periods" %>


<div class="text-end mb-3">
  <%= link_to new_period_path, class: 'btn btn-primary' do %>
    New Period
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        <th>Period Title</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Journal Code</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @periods.each do |period| %>
        <tr>

        <td><%= period.id %></td>
        <td><%= period.period_title %></td>
        <td><%= period.start_date %></td>
        <td><%= period.end_date %></td>
        <td><%= period.journal_code %></td>
    
          <td>
            <%= link_to 'View', period, class: 'btn' %>
            <%= link_to 'Edit', edit_period_path(period), class: 'btn' %>
            <%= link_to 'Delete', period, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
