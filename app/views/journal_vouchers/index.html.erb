<%= content_tag :h1, "List of Journal Vouchers" %>


<div class="text-end mb-3">
  <%= link_to new_journal_voucher_path, class: 'btn btn-primary' do %>
    New Journal Voucher
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        <th>Voucher</th>
        <th>Date Voucher</th>
        <th>Payee</th>
        <th>Description</th>
        <th>Period</th>
        <th>Branch</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @journal_vouchers.each do |journal_voucher| %>
        <tr>

        <td><%= journal_voucher.id %></td>
        <td><%= journal_voucher.voucher %></td>
        <td><%= journal_voucher.date_voucher %></td>
        <td><%= journal_voucher.payee %></td>
        <td><%= journal_voucher.description %></td>
        <td><%= journal_voucher.period %></td>
        <td><%= journal_voucher.branch %></td>
    
          <td>
            <%= link_to 'View', journal_voucher, class: 'btn' %>
            <%= link_to 'Edit', edit_journal_voucher_path(journal_voucher), class: 'btn' %>
            <%= link_to 'Delete', journal_voucher, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
