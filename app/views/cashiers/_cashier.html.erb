<div id="<%= dom_id cashier %>">
  <h1 class="mb-3">Receipt</h1>
  <%= content_tag :div, class: "row" do %>
    <%= content_tag :div, class: "col col-sm-7" do %>
      <%= content_tag :div, class: "card" do %>
        <%= content_tag :div, class: "card-header" do %>
          <%= content_tag :p, cashier.policy_number, class:  "text-muted mb-0" %>
          <%= content_tag :p, "Receipt Number", class: "small text-muted mb-0" %>
          <%= content_tag(:div, content_tag(:p, cashier.orno, class: "fs-2 text-primary mb-0"), class: "card-title mt-0") %>
          <p>
            <%= content_tag :strong, 'OR date: ' %>
            <%= content_tag :small, cashier.or_date%>
          </p>
          <td>
            <%= link_to 'Edit', edit_cashier_path(cashier), data: { turbo_frame: "remote_modal" }, class: 'btn btn-secondary btn-sm'  %>
            <%= link_to 'Delete', cashier, data: { turbo_confirm: 'Are you sure?', turbo_method: :delete }, class: 'btn btn-danger btn-sm' %>
          </td>
        <% end %>
        <%= content_tag :div, class: "card-body" do %>
          <%= content_tag :dl, class: "row" do %>
            <%= content_tag :dt, "Payee: ", class: "col-sm-3" %>
            <%= content_tag :dd, class: "col-sm-9" do %>
              <%= content_tag :p, cashier.payee, class: "mb-1" %>
              <%= content_tag :p, cashier.address, class: "small mb-1" %>
            <% end %>
            <%= content_tag :dt, "Payment: ", class: "col-sm-3" %>
            <%= content_tag :dd, cashier.payment, class: "col-sm-9" %>
            <%= content_tag :dt, "Agent: ", class: "col-sm-3" %>
            <%= content_tag :dd, cashier.agent, class: "col-sm-9" %>
            <%= content_tag :dt, "Bank: ", class: "col-sm-3" %>
            <%= content_tag :dd, cashier.bank, class: "col-sm-9" %>
            <%= content_tag :dt, "Date deposit: ", class: "col-sm-3" %>
            <%= content_tag :dd, cashier.date_deposit, class: "col-sm-9" %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
    <%= content_tag :div, class: 'card col col-sm-5' do %>
      <%= content_tag :table, class: "table" do %>
        <%= content_tag :thead do %>
          <%= content_tag :th, "Details", scope: "col" %>
          <%= content_tag :th, "Amount", scope: "col", class: "text-end" %>
        <% end %>
        <%= content_tag :tbody do %>
          <%= content_tag :tr do%>
            <%= content_tag :td, "Amount Paid" %>
            <%= content_tag :td, number_to_currency(cashier.amount_paid, unit: ""), class: "text-end" %>
          <% end %>
          <%= content_tag :tr do%>
            <%= content_tag :td, "(Service Fee)" %>
            <%= content_tag :td, number_to_currency( cashier.service_fee, unit: ""), class: "text-end" %>
          <% end %>
          <%= content_tag :tr do%>
            <%= content_tag :td, "(Unuse)" %>
            <%= content_tag :td, number_to_currency( cashier.unuse_premium, unit: ""), class: "text-end" %>
          <% end %>
          <%= content_tag :tr do%>
            <%= content_tag :td, "(Withholding Tax)" %>
            <%= content_tag :td, number_to_currency( cashier.withholding_tax, unit: ""), class: "text-end" %>
          <% end %>
        <% end %>
        <%= content_tag :tfoot do %>
          <%= content_tag :td, "Deposit" %>
          <%= content_tag :td, number_to_currency( cashier.amount_deposit, unit: ""), class: "text-end" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>
