<%= content_tag :h1, "List of Branches" %>


<div class="text-end mb-3">
  <%= link_to new_branch_path, class: 'btn btn-primary' do %>
    New Branch
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        <th>Branch Name</th>
        <th>Branch Code</th>
        <th>Approver</th>
        <th>Position</th>
        <th>Initials</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @branches.each do |branch| %>
        <tr>

        <td><%= branch.id %></td>
        <td><%= branch.branch_name %></td>
        <td><%= branch.branch_code %></td>
        <td><%= branch.approver %></td>
        <td><%= branch.position %></td>
        <td><%= branch.initials %></td>
    
          <td>
            <%= link_to 'View', branch, class: 'btn' %>
            <%= link_to 'Edit', edit_branch_path(branch), class: 'btn' %>
            <%= link_to 'Delete', branch, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
