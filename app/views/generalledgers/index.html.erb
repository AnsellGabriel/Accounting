<%= content_tag :h1, "List of Generalledgers" %>


<div class="text-end mb-3">
  <%= link_to new_generalledger_path, class: 'btn btn-primary' do %>
    New Generalledger
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        <th>Reference</th>
        <th>Entry Type</th>
        <th>Transaction Date</th>
        <th>Debit Code</th>
        <th>Credit Code</th>
        <th>Debit</th>
        <th>Credit</th>
        <th>Account</th>
        <th>Branch</th>
        <th>Sub Account</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @generalledgers.each do |generalledger| %>
        <tr>

        <td><%= generalledger.id %></td>
        <td><%= generalledger.reference_id %></td>
        <td><%= generalledger.entry_type %></td>
        <td><%= generalledger.transaction_date %></td>
        <td><%= generalledger.debit_code %></td>
        <td><%= generalledger.credit_code %></td>
        <td><%= generalledger.debit %></td>
        <td><%= generalledger.credit %></td>
        <td><%= generalledger.account %></td>
        <td><%= generalledger.branch %></td>
        <td><%= generalledger.sub_account %></td>
    
          <td>
            <%= link_to 'View', generalledger, class: 'btn' %>
            <%= link_to 'Edit', edit_generalledger_path(generalledger), class: 'btn' %>
            <%= link_to 'Delete', generalledger, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
