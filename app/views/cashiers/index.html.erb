<%= content_tag :h1, "List of Cashiers" %>


<div class="text-end mb-3">
  <%= link_to new_cashier_path, class: 'btn btn-primary' do %>
    New Cashier
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        <th>ORNO</th>
        <th>OR Date</th>
        <th>Policy Number</th>
        <th>Payee</th>
        <th>Payment</th>
        <th>Amount Paid</th>
        <th>Action</th>

      </tr>
    </thead>

    <tbody>
      <% @cashiers.each do |cashier| %>
        <tr>

        <td><%= cashier.id %></td>
        <td><%= cashier.orno %></td>
        <td><%= cashier.or_date %></td>
        <td><%= cashier.policy_number %></td>
        <td><%= cashier.payee %></td>
        <td><%= cashier.payment %></td>
        <td><%= cashier.amount_paid %></td>
    
          <td>
            <%= link_to 'View', cashier, class: 'btn' %>
            <%= link_to 'Edit', edit_cashier_path(cashier), class: 'btn' %>
            <%= link_to 'Delete', cashier, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
